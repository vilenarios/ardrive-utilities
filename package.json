{
	"name": "ardrive-core-js",
	"version": "0.3.0",
	"description": "ArDrive Core contains the essential back end application features to support the ArDrive CLI and Desktop apps, such as file management, Permaweb upload/download, wallet management and other common functions.",
	"main": "./lib/exports.js",
	"types": "./lib/exports.d.ts",
	"dependencies": {
		"arweave": "^1.10.11",
		"axios": "^0.21.1",
		"futoin-hkdf": "^1.3.3",
		"jwk-to-pem": "^2.0.4",
		"node-fetch": "^2.6.1",
		"prompt-password": "^1.2.0",
		"prompt-sync": "^4.2.0",
		"prompts": "^2.4.0",
		"typescript": "^4.2.3",
		"utf8": "^3.0.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@types/chai": "^4.2.15",
		"@types/jwk-to-pem": "^2.0.0",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.32",
		"@types/node-fetch": "^2.5.8",
		"@types/prompt-sync": "^4.1.0",
		"@types/prompts": "^2.0.9",
		"@types/utf8": "^2.1.6",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"chai": "^4.3.3",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "latest",
		"husky": "^=6",
		"lint-staged": "^11.0.0",
		"mocha": "^8.3.1",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"tsc-files": "^1.1.2"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"lintfix": "eslint . --ext .ts --fix",
		"test": "mocha -r ts-node/register src/**/*.test.ts",
		"typecheck": "tsc --noemit",
		"build": "tsc",
		"version": "yarn run format && git add -A src",
		"postversion": "git push && git push --tags",
		"ci": "yarn test && yarn build",
		"start": "yarn run build && node ./lib/index.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"license": "AGPL-3.0-or-later",
	"author": {
		"name": "Permanent Data Solutions Inc",
		"email": "info@ardrive.io",
		"website": "https://ardrive.io"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vilenarios/ardrive-utilities.git"
	},
	"files": [
		"lib/**/*"
	]
}
